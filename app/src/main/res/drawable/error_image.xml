<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFCCCB" /> <!-- Light red background to indicate an error -->
            <corners android:radius="4dp" /> <!-- Rounded corners (optional) -->
        </shape>
    </item>

    <!-- Error icon or text overlay -->
    <item>
        <bitmap
                android:src="@android:drawable/ic_dialog_alert"
                android:gravity="center" />
    </item>
</layer-list>